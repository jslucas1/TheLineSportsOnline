@model IEnumerable<TheLineSportsOnline.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Current Standings</h2>

<table class="table table-condensed table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="2">Player</th>
            <th>Balance</th>
            <th>Min Bet</th>
            <th>Max Bet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(Model.ToList().IndexOf(user)+1)</td>
                <td>@user.Email</td>
                <td>@user.Wallet</td>
                <td>@user.getMinWager()</td>
                <td>@user.getMaxWager()</td>
            </tr>
        }
    </tbody>
</table>
