@model IEnumerable<TheLineSportsOnline.Models.LockOfTheWeek>

@{
    ViewBag.Title = "LOTW";
}

<h2>Lock Of The Week</h2>
<br />
<div class="col">


</div>
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" />
<div class="container">

    @foreach (var item in Model)
    {

        <div class="well">
            <div class="media">
                <a class="pull-left" href="#">
                    @if (item.Footer == "Jeff Lucas")
                    {
                        <img class="media-object" 
                             style="max-height: 120px" 
                             src="https://media.licdn.com/dms/image/C4E03AQH8eHaFuhvYMg/profile-displayphoto-shrink_800_800/0?e=1541030400&v=beta&t=5YqFy3rZfCqvjkZtFzUDCQC_b3kdpFQUadl73MCjA1M">
                    }
                    else
                    {
                        <img class="media-object" 
                         style="max-height: 120px"
                         src="~/Content/admin.png">
                    }
                </a>
                <div class="media-body">
                    <h4 class="media-heading">@item.Header</h4>
                    <p class="text-right">By @item.Footer</p>
                    <p>
                        @item.MSG
                    </p>
                    <ul class="list-inline list-unstyled"></ul>
                </div>
            </div>
        </div>


    }
</div>