@model IEnumerable<TheLineSportsOnline.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Current Standings</h2>

<table class="table table-condensed table-striped table-bordered">
    <thead>
        <tr>
            <th>Player</th>
            <th>Balance</th>
            <th>Min Bet</th>
            <th>Max Bet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Email</td>
            <td>@user.Wallet</td>
            @if (user.Wallet > 0)
            {
                if ((user.Wallet / 2) % 10 != 0)
                {
                    <td>@((user.Wallet / 2) + 5)</td>
                }
                else
                {
                    <td>@(user.Wallet / 2)</td>
                }

                }
            else
            {
                <td>0</td>
            }

            @if ((user.Wallet + 1000) > Math.Abs(user.Wallet - 1000))
            {
                <td>@(user.Wallet + 1000) </td> }
            else
            {
                <td>@Math.Abs(user.Wallet - 1000)</td>}

        
            <td><output></output></td>
            <td><output></output></td>
        </tr>
        }
    </tbody>
</table>
