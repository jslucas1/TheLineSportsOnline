@model IEnumerable<TheLineSportsOnline.Models.Game>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Games</h2>

@Html.ActionLink("Add Game", "New", "Game", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Deactivate", "Deactivate", "Game", null, new { @class = "btn btn-primary" })

@if (ViewData["Display"].ToString() == "active")
{
    @Html.ActionLink("View All", "Index", "Game", new { display = "all" }, new { @class = "btn btn-success" })
}
else
{
    @Html.ActionLink("View Active", "Index", "Game", new { display = "active" }, new { @class = "btn btn-success" })
}

<br /><br />

<table id="customers" class="table-striped table-condensed table-bordered table">
    <thead>
        <tr>
            <th colspan="2">Home Team</th>
            <th>Spread</th>
            <th colspan="2">Visit Team</th>
            <th>Active?</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.HomeTeam.Name</td>
                <td>@game.HomeTeamScore</td>
                <td>@game.Spread</td>
                <td>@game.VisitTeam.Name</td>
                <td>@game.VisitTeamScore</td>
                <td>@game.Active</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = game.Id }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = game.Id }, new { @class = "btn btn-sm btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
